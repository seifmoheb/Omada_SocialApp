<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Settings">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:elevation="30dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="10dp"
        app:cardElevation="30dp"
        app:cardMaxElevation="30dp"
        app:contentPadding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/divider17"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/addpost_background" />

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="150dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView34"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/add"
                        app:civ_border_color="@color/addpost_background"
                        app:civ_border_width="3dp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/floatingActionButton22"
                        android:layout_width="41dp"
                        android:layout_height="44dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center|top"
                        android:layout_marginStart="170dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="62dp"
                        android:clickable="true"
                        android:elevation="50dp"
                        app:backgroundTint="@color/addpost_background"
                        app:fabCustomSize="40dp"
                        app:maxImageSize="20dp"
                        app:srcCompat="@drawable/ic_baseline_edit_24" />

                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_margin="10dp"
                    android:hint="Username"
                    android:textColor="@color/edit_text_color"
                    android:textColorHighlight="#807B7B"
                    android:textColorHint="@color/grayPlaceHolder"
                    android:textColorLink="@color/grayPlaceHolder"
                    android:textCursorDrawable="@color/edit_text_color"
                    android:theme="@style/MyEditText"
                    app:hintAnimationEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:enabled="false"
                        android:hint="Email"
                        android:nestedScrollingEnabled="false"
                        android:textColor="#807B7B"
                        android:textColorHighlight="#807B7B"
                        android:textColorHint="@color/grayPlaceHolder"
                        android:textColorLink="@color/grayPlaceHolder"
                        android:textCursorDrawable="@color/edit_text_color"
                        android:theme="@style/MyEditText" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="Phone number"
                    android:textColor="@color/edit_text_color"
                    android:textColorHighlight="#807B7B"
                    android:textColorHint="@color/grayPlaceHolder"
                    android:textColorLink="@color/grayPlaceHolder"
                    android:textCursorDrawable="@color/edit_text_color"
                    android:theme="@style/MyEditText"
                    app:hintAnimationEnabled="true">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editText6">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/ccp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            app:ccp_contentColor="@color/edit_text_color"
                            app:ccp_defaultNameCode="EG"
                            app:ccp_showFullName="false"
                            app:ccp_showNameCode="false"
                            app:ccp_showPhoneCode="true"

                            />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_baseline_done_24"
                            android:ems="10"
                            android:hint="Phone Number"
                            android:inputType="phone"
                            android:textColor="@color/edit_text_color"
                            android:textColorHighlight="#807B7B"
                            android:textColorHint="@color/grayPlaceHolder"
                            android:textColorLink="@color/grayPlaceHolder"
                            android:textCursorDrawable="@color/edit_text_color"
                            android:theme="@style/MyEditText" />
                    </LinearLayout>
                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="10dp"
                        android:foregroundGravity="center"
                        android:hint="Bio"
                        android:textColor="@color/edit_text_color"
                        android:textColorHighlight="#807B7B"
                        android:textColorHint="@color/grayPlaceHolder"
                        android:textColorLink="@color/grayPlaceHolder"
                        android:textCursorDrawable="@color/edit_text_color"
                        android:theme="@style/MyEditText"
                        android:visibility="visible">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/skills"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_baseline_done_24"
                            android:hint="Bio"
                            android:inputType="textMultiLine"
                            android:textColor="@color/edit_text_color"
                            android:textColorHighlight="#807B7B"
                            android:textColorHint="@color/grayPlaceHolder"
                            android:textColorLink="@color/grayPlaceHolder"
                            android:textCursorDrawable="@color/edit_text_color"
                            android:theme="@style/MyEditText"
                            android:visibility="visible" />
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/addpost_background" />

                <Button
                    android:id="@+id/button14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/buton"
                    android:backgroundTint="@color/background"
                    android:elevation="100dp"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light"
                    tools:layout_editor_absoluteX="307dp" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0013679891" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>